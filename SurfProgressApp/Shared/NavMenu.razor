    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi" aria-hidden="true"></span>Chart
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/surfboard/index">
                <span class="oi " aria-hidden="true"></span>Surfboards
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/surfsession/index">
                <span class="oi" aria-hidden="true"></span>Surf Sessions
            </NavLink>
        </li>
    </ul>
